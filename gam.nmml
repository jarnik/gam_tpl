<?xml version="1.0" encoding="utf-8"?>
<project>
	<app title="gam" file="build" main="GAM" version="0.0.1" company="Jarnik" />
	
	<window background="0x303030" width="640" height="480" fps="30" orientation="portrait" resizable="true" if="web" />
	<window background="0x303030" width="0" height="0" fps="30" orientation="landscape" fullscreen="true" unless="web" />
 	
	<set name="BUILD_DIR" value="bin" />
	
	<!--<setenv name="no_console" value="1" />-->
	
	<classpath name="src" />

	<assets path="assets" include="*" />
	<assets path="assets/fonts" include="*" type="font" />
	<assets path="assets/pugs" include="*" type="binary" />
	<assets path="assets/sfx" include="*" type="sound" />
	<assets path="assets/music" include="*" type="music" />
	
	<haxelib name="nme" />
	<haxelib name="format"/>
    <haxelib name="hsl-1" />
    <haxelib name="svg" />
    <haxelib name="actuate" />

    <haxedef name="network-sandbox" />

</project>
